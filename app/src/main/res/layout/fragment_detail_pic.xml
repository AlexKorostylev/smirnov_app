<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".DetailPicFragment">

    <ImageView
        android:contentDescription="@string/img_btn_back_arrow"
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/back_arrow_32"/>

    <ImageView
        android:contentDescription="@string/img_description"
        android:id="@+id/detail_pic_img"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="270dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/detail_pic_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:gravity ="center"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/detail_pic_detail"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp"
        android:gravity ="center"
        android:textColor="#000000"
        android:textSize="16sp" />

</LinearLayout>