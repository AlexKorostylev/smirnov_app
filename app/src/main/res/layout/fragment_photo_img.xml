<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".PhotoImgFragment">


    <ImageView
        android:id="@+id/info_image_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_horizontal"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/name_text_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/info_image_photo"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:background="@color/photo_text_background"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:textColor="@color/photo_text_color"
        android:textSize="16sp" />

