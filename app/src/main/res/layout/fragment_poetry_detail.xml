<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoetryDetailFragment">

    <LinearLayout
        android:id="@+id/poetry_back_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/poetry_back"
        android:orientation="vertical"
        android:paddingBottom="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/img_btn_back_arrow"
                    android:src="@drawable/back_arrow_24_black" />

            </LinearLayout>


            <ImageView
                android:id="@+id/font_increase_btn"
                android:contentDescription="@string/img_description_increase_font_size"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="32dp"
                android:layout_weight="0.1"
                android:src="@drawable/font_increase_64_black" />

            <ImageView
                android:id="@+id/font_decrease_btn"
                android:contentDescription="@string/img_description_decrease_font_size"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:layout_weight="0.1"
                android:src="@drawable/font_decrease_64_black" />


        </LinearLayout>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/text_header"
            android:textStyle="bold"
            android:textColor="?attr/textColor"/>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:textColor="?attr/textColor"/>

        <TextView
            android:id="@+id/outputData_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:paddingBottom="16dp"
            android:textColor="?attr/textColor"/>

    </LinearLayout>
</ScrollView>