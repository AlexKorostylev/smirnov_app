<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PaintBtnFragment">

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/btn_previous"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Spinner
        android:id="@+id/art_type_paint"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/counter"
        android:entries="@array/img_type"
        android:paddingEnd="1dp" />

    <Button
        android:id="@+id/btn_previous"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:background="@drawable/btn_next_previous"
        android:text="@string/btn_previous_txt"
        android:textSize="@dimen/btn_arrow_size"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_next_previous"
        android:text="@string/btn_next_txt"
        android:textSize="@dimen/btn_arrow_size"/>

</RelativeLayout>
