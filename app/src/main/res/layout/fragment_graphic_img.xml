<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".GraphicImgFragment">

    <ImageView
        android:id="@+id/info_image_graphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_horizontal"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/name_text_graphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detail_text_graphic"
        android:layout_marginStart="24dp"
        android:background="#D9282828"
        android:paddingEnd="16dp"
        android:paddingStart="8dp"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/detail_text_graphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/info_image_graphic"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:background="#D9282828"
        android:paddingEnd="12dp"
        android:paddingStart="8dp"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>