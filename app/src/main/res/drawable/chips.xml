<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#EAEEEE" />

            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:radius="1dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D87373" />

            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:radius="1dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="#1BECC3" />

            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:radius="1dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
        </shape>
    </item>


</selector>










