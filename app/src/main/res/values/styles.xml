<resources>

    <!-- Base application theme. -->
    <!-- Light / day Mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#000000</item>
        <item name="colorPrimaryDark">#BFCACACA</item>


        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
        <item name="chipsColor">#EAEEEE</item>\
        <item name="recycleCardBackColor">#f4f4f4</item>
        <item name="picSingColor">#ffffff</item>
        <item name="nextPreviousColor">#2C000000</item>
        <item name="textColor">#353535</item>
        <item name="backgroundColor">#f4f4f4</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyleLight</item>
        <item name="titleTextColor">@color/toolbar_title_text_color</item>

    </style>

    <!-- Night / dark Mode theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorAccent">#f4f4f4</item>
        <item name="colorPrimaryDark">#000000</item>

        <item name="chipsColor">#2C2C2C</item>\
        <item name="recycleCardBackColor">#000000</item>
        <item name="picSingColor">#BBBABA</item>
        <item name="nextPreviousColor">#97868686</item>
        <item name="textColor">#BBBABA</item>
        <item name="backgroundColor">#000000</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyleDark</item>
        <item name="titleTextColor">#BBBABA</item>
    </style>




    <style name="DrawerArrowStyleLight" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/toolbar_back_arrow_color</item>
    </style>

    <style name="DrawerArrowStyleDark" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#f4f4f4</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.AppCompat.navTheme">
        <!-- Background color when SELECTED at drawer menu -->
        <item name="colorControlHighlight">@color/drawer_item_background_color</item>
    </style>

    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/toolbar_title_text_color</item>
    </style>

</resources>
